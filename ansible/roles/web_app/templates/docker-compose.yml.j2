version: '3.8'
services:
  {{ app_name | default(app) }}:
    image: "{{ docker_image_name }}:{{ docker_image_tag }}"
    container_name: "{{ docker_container_name }}"
    ports:
      - "{{ external_port | default(8080) }}:{{ internal_port | default(80) }}"
    restart: unless-stopped
    volumes:
      - {{ service_name }}_data:/app/src/resources

volumes:
  {{ service_name }}_data:
